{
  "openapi": "3.0.0",
  "info": {
    "title": "API Musician",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "responses": {
          "200": {
            "requestBody": {
              "content": {
                "application/json": {
                  "schema": { "$ref": "#/components/schemas/RequestLogin" }
                }
              }
            },
            "content": {
              "application/json": {
                "example": {
                  "token": "seu_token_de_autenticação"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "example": {
                  "message": "credenciais inválidas"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RequestLogin" }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "example": {
                  "message": "usuário criado com sucesso"
                }
              }
            }
          },
          "401": {
            "content": {
              "application/json": {
                "example": {
                  "message": "falha ao criar usuário"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RequestRegister" }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestLogin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["username", "password"]
      },
      "RequestRegister": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["username", "password"]
      }
    }
  }
}
